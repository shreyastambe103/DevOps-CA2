pipeline {
    agent { label 'businesslens' }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }

        stage('Pre-Build Cleanup') {
            steps {
                echo 'Pruning unused Docker resources before build...'
                sh '''
                    docker container prune -f
                    docker image prune -f
                    docker container rm -f shortify-backend-container || true
                '''
            }
        }

        stage('Build and Deploy') {
            steps {
                echo 'Building and starting Docker containers...'
                sh '''
                    docker build -t shortify-backend .
                    docker run -d -p 8081:8081 --name shortify-backend-container shortify-backend
                '''
            }
        }
    }

    post {
        success {
            echo 'Build and deployment succeeded!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
        always {
            echo 'Build and deployment process finished.'
            sh 'docker ps'
        }
    }
}