{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus-1" },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "id": 1,
      "targets": [
        { "expr": "time() - process_start_time_seconds", "legendFormat": "Uptime (seconds)", "refId": "A" }
      ],
      "title": "Application Uptime",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus-1" },
      "fieldConfig": { "defaults": { "unit": "bytes" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "id": 2,
      "targets": [
        { "expr": "process_resident_memory_bytes", "legendFormat": "Memory Usage", "refId": "A" }
      ],
      "title": "Memory Usage (RSS)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus-1" },
      "fieldConfig": { "defaults": { "unit": "percent" }, "overrides": [] },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "id": 3,
      "targets": [
        { "expr": "rate(process_cpu_seconds_total[1m]) * 100", "legendFormat": "CPU Usage (%)", "refId": "A" }
      ],
      "title": "CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus-1" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "id": 4,
      "targets": [
        { "expr": "nodejs_eventloop_lag_seconds", "legendFormat": "Event Loop Lag", "refId": "A" }
      ],
      "title": "Event Loop Lag",
      "type": "timeseries"
    }
  ],
  "refresh": "5s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["nodejs", "prometheus"],
  "time": { "from": "now-15m", "to": "now" },
  "title": "Node.js App Metrics Dashboard",
  "uid": null,
  "version": 1
}
