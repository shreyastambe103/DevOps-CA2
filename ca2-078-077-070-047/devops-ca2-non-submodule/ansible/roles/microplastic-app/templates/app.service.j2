[Unit]
Description=Microplastic Detection Streamlit App
After=network.target docker.service

[Service]
Type=simple
User={{ app_user }}
WorkingDirectory={{ app_dir }}
ExecStart=/usr/local/bin/streamlit run app.py --server.port={{ app_port }} --server.address=0.0.0.0
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target